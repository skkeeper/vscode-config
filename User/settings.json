{
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono','JetBrains Mono',Consolas, 'Courier New', monospace",
  "editor.lineHeight": 22,
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.rulers": [
    // 80 characters is not just legacy from old terminals, it's widely
    // accepted as a comfortable line lenght for reading purposes.
    // https://katafrakt.me/2017/09/16/80-characters-line-length-limit/
    80,
    120
  ],
  "editor.dragAndDrop": false,
  "editor.minimap.enabled": false,
  "extensions.ignoreRecommendations": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.gradle": true,
    "**/.mvn": true,
    "**/node_modules": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.visible": false,
  "workbench.preferredDarkColorTheme": "Dracula",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Dracula",

  // Syntax
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Extensions
  "material-icon-theme.folders.theme": "specific",
  "disableLigatures.mode": "Cursor",
  "vim.useSystemClipboard": true,
  "java.project.importOnFirstTimeStartup": "automatic",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
}
